<form>

  <div class="text-center">
    <label style="display: block">Cliente</label>
    <%= form_with(model: atacado_pedido) do |form| %>
    <%= form.select "cliente_id", @cliente_options, { include_blank: 'Selecione o cliente' }, id: 'select_form' %>
    <% end %>
  </div>

  <br>

  <div class="text-center">
  <div class="row">
    <div class="col-md-6">
      <label>CPF/CNPJ: </label>
      <label id="cnpj_selected"></label>
    </div>

    <div class="col-md-6">
      <label>Email: </label>
      <label id="email_selected"></label>
    </div>
  </div>

  <div class="row">

    <div class="col-md-6">
      <label>Endereço: </label>
      <label id="endereco_selected"></label>
    </div>

    <div class="col-md-6">
      <label>CEP: </label>
      <label id="cep_selected"></label>
    </div>
  </div>

    <div class="row">

      <div class="col-md-6">
        <label>Cidade: </label>
        <label id="cidade_selected"></label>
      </div>

      <div class="col-md-6">
        <label>UF: </label>
        <label id="uf_selected"></label>
      </div>
    </div>
  </div>
  <br>

  <div>
    <br>
    <h3>Produtos Disponíveis</h3>
    <br>
    <div class="table-responsive">
      <table class="text-center table" id="procuraProduto">
        <thead>
        <tr>
          <th></th>
          <th class="text-center">Nome</th>
          <th class="text-center">Código</th>
          <th class="text-center">Preço/Unidade</th>
          <th class="text-center">Preço</th>
        </tr>
        </thead>
        <tbody id="tabela_procuraProduto">
        <tr>
          <td></td>
          <td id="nome"></td>
          <td id="codigo"></td>
          <td></td>
          <td></td>
        </tr>
        </tbody>
      </table>

      <form style="display: none" id="form_quantidade">
        <div class="row">
          <div class="col-md-6">
            <label>Produto: </label>
            <label id="lblNome"></label>
          </div>

          <div class="col-md-6">
            <label>Código: </label>
            <label id="lblCodigo"></label>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <label>Quantidade (KG/Unidade): </label>
            <input type="text" id="lblQuantidade" value="">
          </div>

          <div class="col-md-6">
            <label>Preço: </label>
            <input type="text" id="lblPreco">
          </div>
        </div>
        <div class="d-flex flex-row justify-content-md-end mt-auto">
        <button type="button" class="btn btn-success" id="envia_escolha">Colocar Produto</button>
        </div>
      </form>
      <br>
    </div>
  </div>

  <br>

  <div>
    <br>
    <h3>Produtos Escolhidos</h3>
    <br>
    <div class="table-responsive">
      <table class="text-center table" id="resultado_atacado">
        <thead>
        <tr>
          <th class="text-center">Código</th>
          <th class="text-center">Nome</th>
          <th class="text-center">Preço/Unidade</th>
          <th class="text-center">Peso</th>
          <th class="text-center">Preço</th>
          <th></th>
        </tr>
        </thead>

        <tbody id="tabela">
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</form>

<div class="d-flex flex-row, justify-content-md-center mt-auto">
  <h2 id="total"></h2>
</div>

    <%= form_with(model: atacado_pedido, id: 'form-enviar') do |form| %>
      <% if atacado_pedido.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(atacado_pedido.errors.count, "error") %> prohibited this cliente from being saved:</h2>

          <ul>
            <% atacado_pedido.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

    <br>
  <div>
    <%= form.submit 'Criar Pedido', class: 'btn btn-outline-success', id: 'enviar_atacadoProduto' %>
  </div>
<% end %>