<%= form_with(model: cliente) do |form| %>
  <% if cliente.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(cliente.errors.count, "error") %> prohibited this cliente from being saved:</h2>

      <ul>
        <% cliente.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label 'Nome/Razão Social', style: "display: block" %>
    <%= form.text_field :nome %>
  </div>

  <div>
    <%= form.label 'Descrição (Opicional)', style: "display: block" %>
    <%= form.text_field :desc %>
  </div>

  <div>
    <%= form.label 'CPF/CNPJ', style: "display: block" %>
    <%= form.text_field :cnpj %>
  </div>

  <div>
    <%= form.label 'Telefone (Opicional)', style: "display: block" %>
    <%= form.text_field :tel %>
  </div>

  <div>
    <%= form.label 'Endereço', style: "display: block" %>
    <%= form.text_field :endereco %>
  </div>

  <div>
    <%= form.label 'CEP', style: "display: block" %>
    <%= form.text_field :cep %>
  </div>

  <div>
    <%= form.label 'Email', style: "display: block" %>
    <%= form.email_field :email %>
  </div>

  <br>

  <div class="row">
    <div class="col-md-6">
      <%= form.label 'Estado: ' %>
      <%= form.select 'uf', '', {include_blank: 'Selecione...', display: 'disabled'}, id: 'selectEstado' %>
    </div>

    <div class="col-md-6">
      <%= form.label 'Cidade: ' %>
      <%= form.select 'cidade', '', {}, id: 'selectCidade' %>
    </div>
  </div>

  <br>

  <div>
    <%= form.submit class: 'btn btn-outline-success' %>
  </div>
<% end %>
